/* pages/addAccount/index.wxss */
.tab{
  display: flex;
  background: #65b393;
  color: #fff;
  padding: 20rpx;
  box-sizing: border-box;
}
.tab>view{
  flex: 1;
  text-align: center;
  border: 1rpx solid #fff;
}
.tab>view:first-child{
  border-right: none;
  border-radius: 10rpx 0 0 10rpx;
}
.tab>view:last-child{
  border-left: none;
  border-radius: 0 10rpx 10rpx 0;
}
.active{
  background: #fff;
  color: #65b393;
}
.inp{
  padding: 20rpx;
  box-sizing: border-box;
  display: flex;
  align-content: center;
  border-bottom: 1rpx solid #ccc;
}
.inp image{
  width: 70rpx;
  height: 70rpx;
  margin-right: 20rpx;
  padding: 30rpx;
  background: #65b393;
  border-radius: 50%;
}
.inp text{
  line-height: 100rpx;
}
.inp input{
  flex: 1;
  line-height: 100rpx;
  font-size: 48rpx;
  height: 120rpx;
  text-align: right;
}
.icons{
  padding: 1.5%;
  box-sizing: border-box;
}
.icons view{
  display: inline-flex;
  flex-flow: column;
  align-items: center;
  width: 16.4%;
  margin: 1.6%;
}
.icons view image{
  width: 70rpx;
  height: 70rpx;
  padding: 30rpx;
  background: #65b393;
  border-radius: 50%;
}
.btn{
  position: fixed;
  bottom: 0;
  width: 100%;
  line-height: 100rpx;
  background: #65b393;
  color: #fff;
  text-align: center
}