/* pages/home/index.wxss */
swiper{
  position: fixed;
  top: 0;
  width: 100%;
  height: 1110rpx;
  background: #dbd0c7;
}
.books{
  width: 600rpx;
  height: 950rpx;
  margin: 75rpx;
  background: #fff;
  font-size: 50rpx;
  border-radius: 10rpx 40rpx 40rpx 10rpx;
  box-shadow: 5rpx 0rpx 20rpx #666;
  overflow: hidden;
}
.cover{
  width: 100%;
  height: 750rpx;
  overflow: hidden;
}
.books image{
  width: 100%;
  height: 800rpx;
}
.name{
  padding: 40rpx;
  box-sizing: border-box;
}
.count{
  display: block;
  font-size: 32rpx;
}
.write{
  position: fixed;
  bottom: 40rpx;
  right: 40rpx;
  width: 100rpx;
  height: 100rpx;
  padding: 18rpx;
  box-sizing: border-box;
  border-radius: 50%;
  background: #65b393;
  box-shadow: 0 0 20rpx #999;
  z-index: 99;
}
.write image{
  width: 64rpx;
  height: 64rpx;
}