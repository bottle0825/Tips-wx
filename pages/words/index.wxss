/* pages/words/index.wxss */
page{
  background: #efefef;
}
.tab{
  display: flex;
  background: #65b393;
  color: #fff;
  padding: 20rpx;
  box-sizing: border-box;
}
.tab>view{
  flex: 1;
  text-align: center;
  border: 1rpx solid #fff;
}
.tab>view:first-child{
  border-right: none;
  border-radius: 10rpx 0 0 10rpx;
}
.tab>view:last-child{
  border-left: none;
  border-radius: 0 10rpx 10rpx 0;
}
.active{
  background: #fff;
  color: #65b393;
}
.word,.sentence{
  margin-top: 5rpx;
}
.word>view,.sentence>view{
  display: flex;
  line-height: 100rpx;
  background: #fff;
  border-bottom: 1rpx solid #efefef;
}
.word .item{
  width: 40%;
  text-align: center;
}
.sentence .item{
  width: 80%;
  text-align: center;
}
.unpass{
  width: 20%;
  text-align: center;
  background: #65b393;
  color: #fff;
}
.sentence .unpass{
  line-height: 200rpx;
}
.pass{
  width: 20%;
  text-align: center;
  background: #ccc;
  color: #fff;
}
.sentence .pass{
  line-height: 200rpx;
}
.btn{
  justify-content: center;
  width: 100%;
  background: #65b393 !important;
  margin-top: 30rpx;
  color: #fff;
}