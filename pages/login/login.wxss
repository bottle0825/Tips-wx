/* pages/login/login.wxss */
 /* @import "/image/bg.wxss";  */
page{
  background: #65b393;
}   
.tab{
  display: flex;
  align-items: center;
  justify-content: center;
  width: 544rpx;
  height: 180rpx;
  margin: 20rpx 103rpx;
  color: #fff;
  font-size: 30rpx;
  text-align: center;
}
.tab>view{
  width: 50%;
  line-height: 68rpx;
}
.active{
  font-weight: 700;
  border-bottom: 5rpx solid #fff;
}
.Input{
  display: none;
  padding: 0 103rpx;
}
.Input>view{
  display: flex;
  align-items: center;
  justify-content: center;
  width: 544rpx;
  height: 92rpx;
  background-color: rgba(255, 255, 255, 0.25);
  border-radius: 12rpx;
  padding: 0 20rpx 0 38rpx;
  margin-bottom: 27rpx;
  box-sizing: border-box;
}
.Check{
  width: 300rpx;
  line-height: 56rpx;
  border-radius: 28rpx;
  font-size: 28rpx;
  color: #fff;
  background: #3d9578;
  box-sizing: border-box;
}
.Wait{
  width: 320rpx;
  line-height: 56rpx;
  border-radius: 28rpx;
  font-size: 28rpx;
  color: #2a2623;
  background: #f6f6f9;
  box-sizing: border-box;
}
input{
  width: 100%;
  color: #fff;
}
.pl{
  color: #fff;
  font-size: 28rpx;
}
.forget{
  display: block;
  width: 100%;
  text-align: center;
  color: #fff;
  font-size: 24rpx;
}
.btn{
  margin-top: 67rpx;
  border-radius: 46rpx;
  color: #65b393;
  font-size: 36rpx;
}
.footer{
  position: fixed;
  bottom: 0;
  line-height: 105rpx;
  width: 100%;
  color: #fff;
  text-align: center;
  font-size: 30rpx;
  border-top: 1rpx solid #fff;
  background: #65b393;
}
.show{
  display: block;
}