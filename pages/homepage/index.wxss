/* pages/homepage/index.wxss */
.header{
  position: relative;
  width: 100%;
  height: 500rpx;
  margin-bottom: 50rpx;
}
.bg{
  height: 500rpx;
  overflow: hidden;
}
.shadow{
  position: absolute;
  bottom: 0;
  left: 0;
  width: 750rpx;
  height: 55rpx;
  background: rgba(0, 0, 0, 0.3);
  z-index: 2;
}
.userinfo-avatar{
  position: absolute;
  right: 30rpx;
  bottom: -50rpx;
  width: 150rpx;
  height: 150rpx;
  border: 5rpx solid #fff;
  box-shadow: 0 10rpx 10rpx #000;
  z-index: 3;
}
.userinfo-nickname{
  position: absolute;
  right: 200rpx;
  bottom: 5rpx;
  font-size: 36rpx;
  color: #fff;
  z-index: 3;
}
.shows{
  display: flex;
  padding: 50rpx 0;
  border-bottom: 1px solid #ccc;
}
.img{
  width: 600rpx;
  height: 600rpx;
}
.head{
  height: 100rpx;
  width: 100rpx;
  padding: 20rpx;
}
.nickname{
  color: #14797d;
}
.time{
  color: #999;
  font-size: 32rpx;
}