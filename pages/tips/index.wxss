/* pages/tips/index.wxss */
.top{
  position: fixed;
  top: 0;
  width: 100%;
  line-height: 90rpx;
  padding-left: 20rpx;
  box-sizing: border-box;
  background: #fff;
  color: #ccc;
  font-size: 28rpx;
}
.content{
  margin-top: 90rpx;
  display: flex;
  flex-wrap: wrap;
  padding: 2%;
  box-sizing: border-box;
  border-top: 20rpx solid #efefef;
}
.item{
  height: 450rpx;
  width: 44%;
  margin: 3%;
  border-radius: 10rpx;
  box-shadow: 0 0 20rpx #ccc;
  box-sizing: border-box;
  overflow: hidden;
}
.pic{
  width: 100%;
  height: 350rpx;
  overflow: hidden;
}
.pic image{
  width: 100%;
  height: 100%;
}
.title{
  padding: 5rpx 20rpx;
  box-sizing: border-box;
  font-size: 32rpx;
}
.title text{
  display: block;
  font-size: 24rpx;
  color: #ccc;
}
.write{
  position: fixed;
  bottom: 40rpx;
  right: 40rpx;
  width: 100rpx;
  height: 100rpx;
  padding: 18rpx;
  box-sizing: border-box;
  border-radius: 50%;
  background: #65b393;
  box-shadow: 0 0 20rpx #999;
  z-index: 99;
}
.write image{
  width: 64rpx;
  height: 64rpx;
}