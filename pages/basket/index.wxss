/* pages/basket/index.wxss */
.top{
  position: fixed;
  top: 0;
  width: 100%;
  line-height: 90rpx;
  padding-left: 20rpx;
  box-sizing: border-box;
  background: #fff;
  color: #ccc;
  font-size: 28rpx;
}
.content{
  margin-top: 90rpx;
  box-sizing: border-box;
  border-top: 20rpx solid #efefef;
}
.item{
  display: flex;
  line-height: 150rpx;
  width: 100%;
  border-bottom: 1rpx solid #efefef
}
.pic{
  float: right;
  width: 120rpx;
  height: 120rpx;
  margin: 15rpx;
  overflow: hidden;
}
.pic image{
  width: 100%;
  height: 100%;
}
.title{
  width: 400rpx;
  box-sizing: border-box;
  font-size: 48rpx;
}
.item text{
  display: block;
  width: 200rpx;
  font-size: 24rpx;
  color: #ccc;
}